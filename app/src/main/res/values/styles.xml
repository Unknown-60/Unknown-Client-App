<resources>
    <!--Tema Base de aplicación-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorVerde</item>
        <item name="colorControlActivated">@color/colorRojo</item>
        <item name="android:windowBackground">@color/colorFondo</item>       
    </style>
   
    <!--Tema se menú-->    
    <style name="PopupTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">#ff00ff00</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <!--Tema Base del spinner-->
    <style name="style_Spinner">
        <item name="android:dropDownSelector">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/black</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

</resources>
